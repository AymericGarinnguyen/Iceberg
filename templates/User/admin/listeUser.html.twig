{% extends "layout.html.twig" %}

{% block page_title %}
    Mes appels à projet
{% endblock %}

{% block content %}

    <div class="container">
        {% if is_granted('ROLE_ADMIN') %}
        <h1>Liste de tous les utilisateurs</h1>
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Email</th>
                <th scope="col">Supprimer</th>

            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <th scope="row">{{ user.id }}</th>
                    <td>{{ user.nom }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <a href="{{ path('user_supprimer', {id: user.id}) }}">
                            <button type="button"><i class="far fa-trash-alt"></i></button>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% else %}
            <div class="alert alert-danger">Vous n'avez pas les droits d'accès à cette page</div>
        {% endif %}

    </div> {# fin div.container #}


{% endblock %}