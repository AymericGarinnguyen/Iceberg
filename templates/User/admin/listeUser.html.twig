{% endblock %}

{% block content %}

    <div class="container">

        <h1>Liste de tous les utilisateurs</h1>
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Email</th>
                <th scope="col">Supprimer</th>

            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <th scope="row">{{ user.id }}</th>
                    <td>{{ user.nom }}</td>
                    <td>{{ user.email }}</td>
                    <td><button type="button"><i class="far fa-trash-alt"></i></button></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div> {# fin div.container #}


{% endblock %}