{% extends "layout.html.twig" %}

{% block page_title %}
    Mes appels à projet
{% endblock %}

{% block content %}

    <div class="container">
        <h1>Mes appels à projet</h1>
        <ul>
            {% for projet in projets %}
                <!-- ##### Card ##### -->
                <div class="titre" class="row">
                    <h3 class="linear-gradient">
                        {% for domaine in projet.domaine %}
                            {{ domaine.categorie }}
                        {% endfor %}
                    </h3>
                </div>
                <div class="row">
                    <div class="col-md-10 no-padding lib-item" data-category="view">
                        <div class="lib-panel">
                            <div class="row box-shadow">
                                <div class="col-md-3">
                                    <img class="lib-img-show card-img" src="{{ asset('images/' ~ projet.image ) }}">
                                </div>   <!--{# fin div. col-md-4#}  -->

                                <div class="col-md-8">
                                    <div class="lib-row lib-header">
                                        <h4>{{ projet.titre }}</h4>
                                        <div class="lib-header-seperator"></div>
                                    </div>
                                    <div class="lib-row lib-desc">
                                        <p>{{ projet.description | raw }}</p>
                                        <a href="">{{ projet.user.prenom }} {{ projet.user.nom }}</a>
                                    </div>
                                </div>   <!--{# fin div. col-md-8#} -->
                            </div>    <!--{# div.box shadow #} -->
                        </div>    <!--{# div.lib panel #}  -->
                    </div>   <!--{ # div.col md-10 #}  -->
                    <div class="col-md-1"></div>
                </div>  <!--{ # div.row #} -->
            {% endfor %}
        </ul>
    </div> {# fin div.container #}

    <a href="{{ path('projet_new') }}">Créer un appel à projet</a>




    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Mon profil</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <li>Nom : {{ app.user.nom }}</li>
                    <li>Email : {{ app.user.email }}</li>
                </div>

                <div class="modal-footer">
                    <a href="{{ path ('user_organisateur_profil') }}" class="btn btn-secondary btn-lg active" role="button">Modifier le profil</a>
                </div>

            </div>
        </div>
    </div>

{% endblock %}